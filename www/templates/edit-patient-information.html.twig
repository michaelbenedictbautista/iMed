<!doctype html>
<html lang="en">
	{% include "partial/head.html.twig" %}
	<body>
		{% include "partial/navigation.html.twig" %}
		<div class="container">		
				<ul class="nav nav-pills gap-3 mb-5">
					<li class="nav-item">
						<a class="nav-link fw-bold linkUnset " href="/">Home</a>
					</li>
					<li class="nav-item">
						<a class="nav-link fw-bold active" aria-current="page" href="patient.php">Patients</a>
					</li>
				</ul>
			
			<!-- Form to add new patient-->
			<div class="container container-body px-5 py-3 my-3 shadow-sm rounded ">
				<h1 class="text-center mb-5">Edit patient</h1>
				<form id="editPatientInformation" method="post" action="edit-patient-information.php?patient_ID = {{patientDetail.patient_ID}}" enctype="multipart/form-data">
                    <input type="hidden" name="patient_ID" value="{{patientDetail.patient_ID}}">
                    <div class="row mb-3">
						<div class="col">
							<label for="firstName" class="form-label">First name
								<span class="asterisk">*</span>
							</label>
							<input type="text" class="form-control text-capitalize" name="firstName" id="firstName"  aria-label="First name" placeholder="John" value="{{patientDetail.first_name}}" required>
						</div>
						<div class="col">
							<label for="lastName" class="form-label">Last name
								<span class="asterisk">*</span>
							</label>
							<input type="text" class="form-control text-capitalize" name="lastName" id="lastName"  aria-label="Last name" placeholder="Doe" value="{{patientDetail.last_name}}" required>
						</div>
					</div>
					<div class="mb-3">
						<label for="dob" class="form-label">Date of Birth
							<span class="asterisk">*</span>
						</label>
						<input type="text" class="form-control dob" name="dob" id="dob"  placeholder="Select date or type like this format YYYY-MM-DD" value="{{patientDetail.date_of_birth}}"required>
					</div>

                    <div class="mb-3">
                        <label for="age" class="form-label">Age</label>
                        {# <input type="text" pattern="\d{1,3}" inputmode="numeric" class="form-control" name="age" id="age"  title="must contain digits only" placeholder="Maximum 3 digits"> #}
						<input pattern="\d{1,3}" type="number" class="form-control" name="age" id="age" placeholder="Enter age here..." title="Must contain digits only" min="0" max="150" value="{{patientDetail.age}}"required> 
                    </div>

                    <div class="mb-3">
                        <label for="gender" class="form-label">Gender</label>
                        <span class="asterisk">*</span>
                        <select class="form-select text-capitalize" name="gender" id="gender"  required>
                            <option  value="{{patientDetail.gender}}">{{patientDetail.gender}}</option>

                            {% if patientDetail.gender == "male" %}
                                <option value="female">Female</option>
                                <option value="prefer not to respond">Prefer not to respond</option>
                            
                            {% elseif patientDetail.gender == "female" %}
                                <option value="male">Male</option>
                                <option value="prefer not to respond">Prefer not to respond</option>

                            {% elseif patientDetail.gender == "prefer not to respond" %}
                                <option value="male">Male</option>
                                <option value="female">Female</option>

                            {% endif %}
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="status" class="form-label">Status</label>
                        <span class="asterisk">*</span>
                        <select class="form-select text-capitalize" name="status" id="status" required >
                            <option  value="{{patientDetail.status}}">{{patientDetail.status}}</option>
                            {% if patientDetail.status == "active" %}
                                <option value="deceased">Deceased</option>
                                <option value="discharged">Discharged</option>
                                <option value="transferred">Transferred</option>
                                <option value="wait listed">Wait listed</option>

                            {% elseif patientDetail.status == "deceased" %}

                                <option value="active">Active</option>
                                <option value="discharged">Discharged</option>
                                <option value="transferred">Transferred</option>
                                <option value="wait listed">Wait listed</option>

                            {% elseif patientDetail.status == "discharged" %}
                                <option value="active">Active</option>
                                <option value="deceased">Deceased</option>
                                <option value="transferred">Transferred</option>
                                <option value="wait listed">Wait listed</option>

                            {% elseif patientDetail.status == "wait listed" %}
                                <option value="active">Active</option>
                                <option value="deceased">Deceased</option>
                                <option value="discharged">Discharged</option>
                                <option value="transferred">Transferred</option>
                            {% endif %}
                           
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="er_response" class="form-label">Emergency response</label>
                        <span class="asterisk">*</span>
                        <select class="form-select text-capitalize" name="er_response" id="er_response" required>
                            <option  value="{{patientDetail.emergency_response}}">{{patientDetail.emergency_response}}</option>
                            {% if patientDetail.emergency_response == "for resuscitation" %}                            
                                <option value="not for resuscitation">Not For Resuscitation</option>
                            {% elseif patientDetail.emergency_response == "not for resuscitation" %}
                                <option value="for resuscitation">For Resuscitation</option>
                            {% endif %}
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="allergy" class="form-label">Allergy</label>                      
                        <input type="text" class="form-control text-capitalize" name="allergy" id="allergy" placeholder="Enter known allergy here or leave it blank if none..." value="{{patientDetail.allergy}}" >
                    </div>

                    <div class="mb-3">
                        <label for="room" class="form-label">Room information</label>                      
                        <input type="text" class="form-control" name="room" id="room" placeholder="Enter room information..." value="{{patientDetail.room}}">
                    </div>

					{# <div class="mb-3">
						<label for="formFile" class="form-label">Choose your profile picture
						</label>
						<input class="form-control" type="file" name="formFile" id="formFile" onchange="fileValidation()">
					</div> #}
					
                    <div class="mb-3">
                        <label for="filechoose" class="form-label">Upload picture</label>
                            <input type="file" name="file" class="form-control" type="file" id="filechoose" required>
                    </div>

					<div class="modal-footer">
						{% set outcome = resultCreated.errors | join(", ") %}
						<a href="patient.php">
							<div class="btn btn-outline-primary">Cancel</div>
						</a>
						<button type="submit" name="submit" class="btn btn-primary" id="add-patient-btn">Save</button>
						
						{% if outcome | length > 0 %}
							<div class="alert alert-warning alert-dismissible fade show" role="alert">
								{{ outcome }}
								<button type="button" class="btn-close" data-bs-dismiss="alert"></button>
							</div>
						{% endif %}
					</div>
				</form>
			</div>

		</div>
		{% include "partial/footer.html.twig" %}
		{% include "partial/script.html.twig" %}
		<script src="js/patient_v6.js" defer></script>	
	</body>
</html>
