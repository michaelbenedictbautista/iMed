<!doctype html>
<html
	lang="en">
	<!-- Calling method head.html.twig-->
	{% include "partial/head.html.twig" %}
	<body>
		{% include "partial/navigation.html.twig" %}

		<div class="container">
			<ul class="nav nav-pills gap-3">
				<li class="nav-item">
					<a class="h3 nav-link fw-bold active" aria-current="page" href="/">Home</a>
				</li>
				<li class="nav-item">
					<a class="h3 nav-link fw-bold linkUnset" href="/">Patients</a>
				</li>
			</ul>

			<!-- Loop all terminologies -->
			{% for terminology in terminologies.items %}
				<div class="container container-body px-5 py-3 my-3 shadow-sm rounded ">

					<div class="row justify-content-between">
						<div class="col-9">
							<p class="fw-bold fs-4" id="note">{{terminology.description}}</p>
						</div>
						<div class="col-3">
							<p class="fw-bold text-end">{{ terminology.abbreviation }}</p>
						</div>
					</div>
				</div>
			{% endfor %}


		</div>
		{% include "partial/footer.html.twig" %}
		{% include "partial/script.html.twig" %}
		{# <script type="text/javascript" src="js/home.js" defer></script> #}
	</body>
</html>
