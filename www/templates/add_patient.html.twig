<!doctype html>
<html lang="en">
	{% include "partial/head.html.twig" %}
	<body>
		{% include "partial/navigation.html.twig" %}
		<div class="container">
			
			
				<ul class="nav nav-pills gap-3 mb-5">
					<li class="nav-item">
						<a class="nav-link fw-bold linkUnset " href="/">Home</a>
					</li>
					<li class="nav-item">
						<a class="nav-link fw-bold active" aria-current="page" href="patient.php">Patients</a>
					</li>
				</ul>
			
			<div class="container container-body px-5 py-3 my-3 shadow-sm rounded ">
				<h1 class="text-center mb-5">Add new patient</h1>
				<form id="createPatient" method="post" action="add_patient.php" enctype="multipart/form-data">
					<div class="row mb-3">
						<div class="col">
							<label for="firstName" class="form-label">First name
								<span class="asterisk">*</span>
							</label>
							<input type="text" class="form-control" name="firstName" id="firstName"  aria-label="First name" placeholder="John" required>
						</div>
						<div class="col">
							<label for="lastName" class="form-label">Last name
								<span class="asterisk">*</span>
							</label>
							<input type="text" class="form-control" name="lastName" id="lastName"  aria-label="Last name" required>
						</div>
					</div>
					<div class="mb-3">
						<label for="dob" class="form-label">Date of Birth
							<span class="asterisk">*</span>
						</label>
						<input type="text" class="form-control dob" name="dob" id="dob"  placeholder="Select date or type like this format YYYY-MM-DD" required>
					</div>

                    <div class="mb-3">
                        <label for="age" class="form-label">Age</label>
                        <input type="text" pattern="\d{1,3}" inputmode="numeric" class="form-control" name="age" id="age"  title="must contain digits only" placeholder="Maximum 3 digits">
                    </div>

                    <div class="mb-3">
                        <label for="gender" class="form-label">Gender</label>
                        <span class="asterisk">*</span>
                        <select class="form-select" name="gender" id="gender" required>
                            <option value="">Please select gender...</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                            <option value="Prefer not to respond">Prefer not to respond</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="status" class="form-label">Status</label>
                        <span class="asterisk">*</span>
                        <select class="form-select" name="status" id="status" required>
                            <option value="">Please select status...</option>
                            <option value="Active">Active</option>
                            <option value="Deceased">Deceased</option>
                            <option value="Discharged">Discharged</option>
                            <option value="Transferred">Transferred</option>
                            <option value="Wait listed">Wait listed</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="er_response" class="form-label">Emergency response</label>
                        <span class="asterisk">*</span>
                        <select class="form-select" name="er_response" id="er_response" required>
                            <option value="">Please select emergency response...</option>
                            <option value="for resuscitation">For Resuscitation</option>
                            <option value="not for resuscitation">Not For Resuscitation</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="allergy" class="form-label">Allergy</label>                      
                        <input type="text" class="form-control" name="allergy" id="allergy" placeholder="Enter known allergy here or leave it blank if none..." >
                    </div>

                    <div class="mb-3">
                        <label for="room" class="form-label">Room</label>                      
                        <input type="text" class="form-control" name="room" id="room" placeholder="Enter room information..." >
                    </div>

					{# <div class="mb-3">
						<label for="formFile" class="form-label">Choose your profile picture
						</label>
						<input class="form-control" type="file" name="formFile" id="formFile" onchange="fileValidation()">
					</div> #}
                    <div class="mb-3">
                        <label for="filechoose" class="form-label">Choose File</label>
                            <input type="file" name="file" class="form-control" type="file" id="filechoose">
                    </div>
					{% set outcome = resultCreated.errors | join(", ") %}
					<button type="submit" name="submit" class="btn btn-primary mt-3" id="add-patient-btn">Add</button>
					
					<a href="patient.php">
						<div class="btn btn-secondary ml-3 mt-3">Cancel</div>
					</a>

					{% if outcome | length > 0 %}
						<div class="alert alert-warning alert-dismissible fade show" role="alert">
							{{ outcome }}
							<button type="button" class="btn-close" data-bs-dismiss="alert"></button>
						</div>
					{% endif %}
				</form>
			</div>

		</div>
		{% include "partial/footer.html.twig" %}
		{% include "partial/script.html.twig" %}
		<script src="js/patient_v6.js" defer></script>	
	</body>
</html>
